<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <StackPanel Orientation="Vertical" Spacing="1">
    <TextBlock Classes="h2">A panel which lays out its children by explicit coordinates</TextBlock>
    <Canvas Background="Yellow" Width="30" Height="40">
      <Rectangle Fill="Blue" Width="6" Height="4" Canvas.Left="4" Canvas.Top="3">
      </Rectangle>
      <Rectangle Fill="Orange" Width="5" Height="5" Canvas.Left="3" Canvas.Top="25"/>
      <Rectangle Fill="OrangeRed" Width="5" Height="5" Canvas.Left="18" Canvas.Top="25"/>
      <Line StartPoint="12,19" EndPoint="3,12" Stroke="Red" StrokeThickness="1"/>
      <Rectangle Fill="Violet" Stroke="DarkBlue" StrokeThickness="1" Width="5" Height="5" Canvas.Left="15" Canvas.Top="3"/>
      <Rectangle Fill="Brown" Width="8" Height="1" Canvas.Left="3" Canvas.Top="35"/>
    </Canvas>
  </StackPanel>
</UserControl>
