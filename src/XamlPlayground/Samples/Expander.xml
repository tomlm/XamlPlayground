<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:console="https://github.com/jinek/consolonia">
  <StackPanel Orientation="Vertical"
              Spacing="4">
    <TextBlock Classes="h2">Expands to show nested content</TextBlock>

    <StackPanel Orientation="Vertical"
                HorizontalAlignment="Center"
                Spacing="2">

      <Expander Header="Up"
                ExpandDirection="Up">
        <StackPanel>
          <TextBlock>Top content</TextBlock>
          <TextBlock>Top content</TextBlock>
          <TextBlock>Top content</TextBlock>
        </StackPanel>
      </Expander>
      <Expander Header="Down"
                ExpandDirection="Down">
        <StackPanel>
          <TextBlock>Bottom content</TextBlock>
          <TextBlock>Bottom content</TextBlock>
          <TextBlock>Bottom content</TextBlock>
        </StackPanel>
      </Expander>
      <Expander Header="Left"
                ExpandDirection="Left">
        <StackPanel>
          <TextBlock>Left content</TextBlock>
          <TextBlock>Left content</TextBlock>
          <TextBlock>Left content</TextBlock>
        </StackPanel>
      </Expander>
      <Expander Header="Right"
                ExpandDirection="Right"
                Background="AntiqueWhite">
        <StackPanel>
          <TextBlock>Right content</TextBlock>
          <TextBlock>Right content</TextBlock>
          <TextBlock>Right content</TextBlock>
        </StackPanel>
      </Expander>
    </StackPanel>
  </StackPanel>
</UserControl>
