<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=System.Private.CoreLib"
             xmlns:console="https://github.com/jinek/consolonia"
             mc:Ignorable="d" d:DesignWidth="80" d:DesignHeight="45">
  <StackPanel Orientation="Vertical" Spacing="1" HorizontalAlignment="Stretch">
    <TextBlock Name="DatePickerDesc" Classes="h2" TextWrapping="Wrap" />
    <TextBlock Name="TimePickerDesc" Classes="h2" TextWrapping="Wrap" />

    <StackPanel Orientation="Vertical"
                Margin="2"
                HorizontalAlignment="Stretch"
                Spacing="2">
      <TextBlock >A simple DatePicker</TextBlock>
      <StackPanel Orientation="Vertical">
        <Border BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}"
                BorderThickness="1" Padding="2">
          <DatePicker/>
        </Border>
        <Panel Background="{DynamicResource SystemControlBackgroundBaseLowBrush}">
          <TextBlock Padding="2" >
            <TextBlock.Text>
              <x:String>
                &lt;DatePicker Header="Pick a date" /&gt;
              </x:String>
            </TextBlock.Text>
          </TextBlock>
        </Panel>
      </StackPanel>


      <Border BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}"
              BorderThickness="1" Padding="2">
        <DatePicker>
          <DataValidationErrors.Error>
            <sys:Exception />
          </DataValidationErrors.Error>
        </DatePicker>
      </Border>

      <TextBlock >A DatePicker with day formatted and year hidden.</TextBlock>
      <StackPanel Orientation="Vertical">
        <Border BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}"
                BorderThickness="1" Padding="2">
          <DatePicker x:Name="Control2" DayFormat="d (ddd)"
                      YearVisible="False" />
        </Border>
        <Panel Background="{DynamicResource SystemControlBackgroundBaseLowBrush}">
          <TextBlock Padding="2" >
            <TextBlock.Text>
              <x:String>
                &lt;DatePicker DayFormat="d (ddd)" YearVisible="False" /&gt;
              </x:String>
            </TextBlock.Text>
          </TextBlock>
        </Panel>
      </StackPanel>

      <Border Background="{DynamicResource SystemControlHighlightBaseLowBrush}" BorderThickness="1" Margin="2" />

      <TextBlock >A simple TimePicker.</TextBlock>
      <StackPanel Orientation="Vertical">
        <Border BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}"
                BorderThickness="1" Padding="2">
          <TimePicker />
        </Border>
        <Panel Background="{DynamicResource SystemControlBackgroundBaseLowBrush}">
          <TextBlock Padding="2" >
            <TextBlock.Text>
              <x:String>
                &lt;TimePicker /&gt;
              </x:String>
            </TextBlock.Text>
          </TextBlock>
        </Panel>
      </StackPanel>

      <Border BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}"
              BorderThickness="1" Padding="2">
        <TimePicker>
          <DataValidationErrors.Error>
            <sys:Exception />
          </DataValidationErrors.Error>
        </TimePicker>
      </Border>

      <TextBlock >A TimePicker with a header and minute increments specified.</TextBlock>
      <StackPanel Orientation="Vertical">
        <Border BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}"
                BorderThickness="1" Padding="2">
          <TimePicker MinuteIncrement="15" />
        </Border>
        <Panel Background="{DynamicResource SystemControlBackgroundBaseLowBrush}">
          <TextBlock Padding="2" >
            <TextBlock.Text>
              <x:String>
                &lt;TimePicker Header="Arrival time" MinuteIncrement="15" /&gt;
              </x:String>
            </TextBlock.Text>
          </TextBlock>
        </Panel>
      </StackPanel>

      <TextBlock >A TimePicker using a 12-hour clock.</TextBlock>
      <StackPanel Orientation="Vertical">
        <Border BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}"
                BorderThickness="1" Padding="2">
          <TimePicker ClockIdentifier="12HourClock" />
        </Border>
        <Panel Background="{DynamicResource SystemControlBackgroundBaseLowBrush}">
          <TextBlock Padding="2" >
            <TextBlock.Text>
              <x:String>
                &lt;TimePicker ClockIdentifier="12HourClock" Header="12 hour clock" /&gt;
              </x:String>
            </TextBlock.Text>
          </TextBlock>
        </Panel>
      </StackPanel>

      <TextBlock >A TimePicker using a 24-hour clock.</TextBlock>
      <StackPanel Orientation="Vertical">
        <Border BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}"
                BorderThickness="1" Padding="2">
          <TimePicker ClockIdentifier="24HourClock" />
        </Border>
        <Panel Background="{DynamicResource SystemControlBackgroundBaseLowBrush}">
          <TextBlock Padding="2" >
            <TextBlock.Text>
              <x:String>
                &lt;TimePicker ClockIdentifier="24HourClock" Header="24 hour clock" /&gt;
              </x:String>
            </TextBlock.Text>
          </TextBlock>
        </Panel>
      </StackPanel>

    </StackPanel>
  </StackPanel>
</UserControl>
