<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="80"
             d:DesignWidth="40">
  <StackPanel Orientation="Vertical" Spacing="1">
    <TextBlock Classes="h2">A control which decorates a child with a border and background</TextBlock>

    <StackPanel Orientation="Vertical"
                Margin="0,2,0,0"
                HorizontalAlignment="Center"
                Spacing="2">
      <Border BorderBrush="{DynamicResource SystemAccentColor}" BorderThickness="1" Padding="2">
        <TextBlock>Border</TextBlock>
      </Border>
      <Border Background="{DynamicResource SystemAccentColorDark1}"
              BorderBrush="{DynamicResource SystemAccentColor}"
              BorderThickness="1"
              Padding="2">
        <TextBlock>Border and Background</TextBlock>
      </Border>
    </StackPanel>
  </StackPanel>
</UserControl>
