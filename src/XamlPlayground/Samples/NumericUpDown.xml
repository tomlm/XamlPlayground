<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=System.Private.CoreLib"
             xmlns:console="https://github.com/jinek/consolonia">
  <StackPanel Orientation="Vertical" Spacing="1"
              MaxWidth="80">
    <TextBlock Margin="1" Classes="h2" TextWrapping="Wrap">Numeric up-down control provides a TextBox with button spinners that allow incrementing and decrementing numeric values by using the spinner buttons, keyboard up/down arrows, or mouse wheel.</TextBlock>

    <TextBlock Margin="1,1,1,1" FontWeight="Bold">Features:</TextBlock>
    <WrapPanel Margin="-1,0">
      <Grid Grid.Row="0" Grid.Column="0" Margin="1" ColumnDefinitions="Auto, Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto">
        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="1">ShowButtonSpinner:</TextBlock>
        <CheckBox Grid.Row="0" Grid.Column="1" IsChecked="{Binding #upDown.ShowButtonSpinner}" VerticalAlignment="Center" Margin="1"/>

        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="1">IsReadOnly:</TextBlock>
        <CheckBox Grid.Row="1" Grid.Column="1" IsChecked="{Binding #upDown.IsReadOnly}" VerticalAlignment="Center" Margin="1"/>

        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="1">AllowSpin:</TextBlock>
        <CheckBox Grid.Row="2" Grid.Column="1" IsChecked="{Binding #upDown.AllowSpin}" VerticalAlignment="Center" Margin="1"/>

        <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="1">ClipValueToMinMax:</TextBlock>
        <CheckBox Grid.Row="3" Grid.Column="1" IsChecked="{Binding #upDown.ClipValueToMinMax}" VerticalAlignment="Center" Margin="1"/>

      </Grid>
      <Grid Grid.Row="0" Grid.Column="1" Margin="1" ColumnDefinitions="Auto, 12" RowDefinitions="Auto,Auto,Auto,Auto,Auto">

        <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="1">Watermark:</TextBlock>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding #upDown.Watermark}" VerticalAlignment="Center" Margin="1" />

        <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="1">Text:</TextBlock>
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding #upDown.Text}" VerticalAlignment="Center" Margin="1" />
      </Grid>
      <Grid Grid.Row="0" Grid.Column="2" Margin="1" RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="Auto, Auto">
        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="1,1,1,1">Minimum:</TextBlock>
        <NumericUpDown Grid.Row="0" Grid.Column="1" Value="{Binding #upDown.Minimum}"
                       NumberFormat="{Binding #upDown.CultureInfo}" VerticalAlignment="Center" Margin="1" HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="1,1,1,1">Maximum:</TextBlock>
        <NumericUpDown Grid.Row="1" Grid.Column="1" Value="{Binding #upDown.Maximum}"
                       NumberFormat="{Binding #upDown.CultureInfo}" VerticalAlignment="Center" Margin="1" HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="1,1,1,1">Increment:</TextBlock>
        <NumericUpDown Grid.Row="2" Grid.Column="1" Value="{Binding #upDown.Increment}" VerticalAlignment="Center"
                       Margin="1" HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="1,1,1,1">Value:</TextBlock>
        <NumericUpDown Grid.Row="3" Grid.Column="1" Value="{Binding #upDown.Value}" VerticalAlignment="Center"
                       Margin="1" HorizontalAlignment="Center"/>

      </Grid>
    </WrapPanel>

    <WrapPanel Margin="1,1,1,1">
      <StackPanel Orientation="Vertical" Margin="1">
        <Label Target="upDown" FontWeight="Bold" VerticalAlignment="Center">Usage of decimal NumericUpDown:</Label>
        <NumericUpDown Name="upDown" Minimum="0" Maximum="10" Increment="0.5"
                       VerticalAlignment="Center"
                       Watermark="Enter text"/>
      </StackPanel>

      <StackPanel Orientation="Vertical" Margin="1">
        <Label Target="DoubleUpDown" FontWeight="Bold" VerticalAlignment="Center">Usage of double NumericUpDown:</Label>
        <NumericUpDown Name="DoubleUpDown" Minimum="0" Maximum="10" Increment="0.5"
                       VerticalAlignment="Center"
                       Watermark="Enter text" />
      </StackPanel>

      <StackPanel Orientation="Vertical" Margin="1">
        <Label Target="ValidationUpDown" FontWeight="Bold" VerticalAlignment="Center">NumericUpDown with Validation Errors:</Label>
        <NumericUpDown x:Name="ValidationUpDown" Minimum="0" Maximum="10" Increment="0.5"
                       VerticalAlignment="Center"
                       Watermark="Enter text" FormatString="{Binding SelectedFormat.Value}">
          <DataValidationErrors.Error>
            <sys:Exception />
          </DataValidationErrors.Error>
        </NumericUpDown>
      </StackPanel>
    </WrapPanel>

  </StackPanel>
</UserControl>
